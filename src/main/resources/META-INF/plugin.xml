<idea-plugin>
    <id>com.github.morf46.translatur</id>
    <name>translatur</name>
    <vendor>morf46</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.morf46.translatur.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.morf46.translatur.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.morf46.translatur.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <group id="org.jetbrains.plugins.template.actions.CategoryActionGroup"
               class="org.jetbrains.plugins.template.actions.CategoryActionGroup" text="Categories"
               popup="true"
               description="Translation Categories">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>

        <action id="org.jetbrains.plugins.template.actions.PopupCategoryAction"
                class="org.jetbrains.plugins.template.actions.PopupCategoryAction" text="Set TRANSLATUR Category"
                description="Set TRANSLATUR Category">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="org.jetbrains.plugins.template.actions.TranslateAction"
                class="org.jetbrains.plugins.template.actions.TranslateAction" text="TRANSLATUR"
                description="translatur">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>


    </actions>
</idea-plugin>
